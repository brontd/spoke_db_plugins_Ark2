<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.5/phpunit.xsd"
    colors="true"
    backupGlobals="false">
    <testsuites>
        <testsuite name="Noid Test Suite">
            <directory>tests/suite</directory>
            <exclude>tests/NoidTestCase.php</exclude>
        </testsuite>
        <testsuite name="Perl Random Test Suite">
            <directory>tests/Perl_Random</directory>
        </testsuite>
    </testsuites>
</phpunit>
